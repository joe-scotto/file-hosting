{% extends 'main.twig' %}
{% block title %} Login {% endblock %}
{% block body %}login{% endblock %}

{% block content %}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 login_box">
        <h1>Login</h1>
        <hr />
        {% if error %}
            <p>{{ error }}</p>
        {% endif %}
        <form method="post" action="">
            <!-- Username -->
            <label for="username">Username</label>
            <div class="input-group">
                <span class="input-group-addon" id="username">
                    <span class="glyphicon glyphicon-user"></span>
                </span>
                <input type="text" class="form-control" placeholder="Username" aria-describedby="username" name="username" id="username" value="{{ username }}">
            </div>
            <!-- Password -->
            <label for="password">Password</label>
            <div class="input-group">
                <span class="input-group-addon" id="password">
                    <span class="glyphicon glyphicon-lock"></span>
                </span>
                <input type="password" class="form-control" placeholder="password" aria-describedby="password" name="password" id="password">
            </div>
            <!-- Submit -->
            <input type="submit" name="submit" value="Login">
        </form>
        
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
        <a href="{{ homeURL }}">Back to Home</a>
    </div>
{% endblock %}